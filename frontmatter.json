{
  "$schema": "https://frontmatter.codes/frontmatter.schema.json",
  "frontMatter.taxonomy.contentTypes": [
    {
      "name": "Post",
      "pageBundle": false,
      "previewPath": null,
      "fields": [
        {
          "title": "layout",
          "name": "layout",
          "type": "string"
        },
        {
          "title": "title",
          "name": "title",
          "type": "string"
        },
        {
          "title": "date",
          "name": "date",
          "type": "datetime"
        },
        {
          "title": "image",
          "name": "image",
          "type": "image"
        },
        {
          "title": "categories",
          "name": "categories",
          "type": "categories"
        },
        {
          "title": "author",
          "name": "author",
          "type": "string"
        }
      ]
    }
  ],
  "frontMatter.framework.id": "jekyll",
  "frontMatter.content.publicFolder": {
    "path": "/uploads",
    "relative": true
  },
  "frontMatter.preview.host": "http://localhost:4000",
  "frontMatter.content.pageFolders": [
    {
      "title": "posts",
      "path": "[[workspace]]/_posts"
    }
  ],
  "frontMatter.git.enabled": true,
  "frontMatter.data.files": [
    {
      "id": "candidates",
      "title": "Candidates",
      "file": "[[workspace]]/_data/candidates.json",
      "fileType": "json",
      "labelField": "name",
      "singleEntry": false,
      "schema": {
        "title": "candidates",
        "type": "object",
        "required": [
          "name",
          "age",
          "about",
          "motivation",
          "photos"
        ],
        "properties": {
          "name": {
            "type": "string",
            "title": "Name"
          },
          "age": {
            "type": "integer",
            "title": "Age"
          },
          "about": {
            "type": "string",
            "title": "About"
          },
          "motivation": {
            "type": "string",
            "title": "Motivation"
          },
          "photos": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "title": "Photos"
          },
          "links": {
            "type": "object",
            "properties": {
              "instagram": {
                "type": "string",
                "title": "Instagram"
              },
              "x": {
                "type": "string",
                "title": "ùïè"
              },
              "facebook": {
                "type": "string",
                "title": "Facebook"
              },
              "tiktok": {
                "type": "string",
                "title": "TikTok"
              },
              "website": {
                "type": "string",
                "title": "Website"
              }
            },
            "title": "Links"
          }
        }
      }
    },{
      "id": "events",
      "title": "Events",
      "file": "[[workspace]]/_data/events.json",
      "fileType": "json",
      "labelField": "date",
      "singleEntry": false,
      "schema": {
        "type": "object",
        "properties": {
          "date": {
            "type": "string",
            "format": "date",
            "title": "Date"
          },
          "events": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "title": {
                  "type": "string",
                  "title": "Title"
                },
                "time": {
                  "type": "string",
                  "title": "Time"
                },
                "place": {
                  "type": "string",
                  "title": "Place"
                },
                "price": {
                  "type": "string",
                  "title": "Price"
                },
                "description": {
                  "type": "string",
                  "title": "Description"
                },
                "facebook": {
                  "type": "string",
                  "title": "Facebook"
                },
                "ticket_url": {
                  "type": "string",
                  "title": "Ticket URL"
                },
                "rsvp_url": {
                  "type": "string",
                  "title": "RSVP URL"
                }

    }
  ],
  "frontMatter.website.host": "https://bears.lu"
}
