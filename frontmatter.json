{
  "$schema": "https://frontmatter.codes/frontmatter.schema.json",
  "frontMatter.taxonomy.contentTypes": [
    {
      "name": "Post",
      "pageBundle": false,
      "previewPath": null,
      "fields": [
        {
          "title": "layout",
          "name": "layout",
          "type": "string"
        },
        {
          "title": "title",
          "name": "title",
          "type": "string"
        },
        {
          "title": "date",
          "name": "date",
          "type": "datetime"
        },
        {
          "title": "image",
          "name": "image",
          "type": "image"
        },
        {
          "title": "categories",
          "name": "categories",
          "type": "categories"
        },
        {
          "title": "author",
          "name": "author",
          "type": "string"
        }
      ]
    }
  ],
  "frontMatter.framework.id": "jekyll",
  "frontMatter.content.publicFolder": {
    "path": "/uploads",
    "relative": true
  },
  "frontMatter.preview.host": "http://localhost:4000",
  "frontMatter.content.pageFolders": [
    {
      "title": "posts",
      "path": "[[workspace]]/_posts"
    }
  ],
  "frontMatter.git.enabled": true,
  "frontMatter.data.files": [
    {
      "id" : "candidates",
      "title" : "Candidates",
      "file" : "[[workspace]]/_data/candidates.json",
      "fileType": "json",
      "labelField": "name",
      "singleEntry": false,
      "schema": {
        "title": "candidates",
        "type": "object",
        "required": [
          "name",
          "age",
          "about",
          "motivation",
          "photos"
        ],
        "properties": {
          "name": {
            "type": "string"
            "title": "Name"
          },
          "age": {
            "type": "integer",
            "title": "Age"
          },
          "about": {
            "type": "string",
            "title": "About"
          },
          "motivation": {
            "type": "string",
            "title": "Motivation"
          },
          "photos": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "title": "Photos"
          },
          "links": {
            "type": "object",
            "properties": {
              "instagram": {
                "type": "string",
                "title": "Instagram"
              },
              "x": {
                "type": "string",
                "title": "ùïè"
              },
              "facebook": {
                "type": "string",
                "title": "Facebook"
              },
              "tiktok": {
                "type": "string",
                "title": "TikTok"
              },
              "website": {
                "type": "string",
                "title": "Website"
              }
            },
            "title": "Links"
          }
      }
    }
  ]
}
